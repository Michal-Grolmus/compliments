<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    controllerName="lichotky.app.controller.Main"
    displayBlock="true"
    height="100%"
>
    <f:DynamicPage 
		showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="{i18n>appTitle}"
                        level="H1"
                        wrapping="true"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <FlexBox
                    alignItems="Start"
                    justifyContent="SpaceBetween"
                >
                    <items>
                        <Panel
                            backgroundDesign="Transparent"
                            class="sapUiNoContentPadding"
                        >
                            <content>
                                <Label
                                    text="{i18n>instruction}"
                                    class="sapUiSmallMargin"
                                    wrapping="true"
                                />
                            </content>
                        </Panel>
                    </items>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox
                class="sapUiSmallMargin sapUiResponsivePadding--header sapUiResponsivePadding--content"
                width="100%"
                renderType="Bare"
            >
                <Label 
                    text="{i18n>employeeLabel}"
                    wrapping="true" />
                <Input
                    id="employeeInput"
                    width="100%"
                    placeholder="{i18n>employeePlaceholder}"
                    liveChange=".onNameChange"
                />

                <Label
                    text="{i18n>attributesLabel}"
                    class="sapUiSmallMarginTop"
                    wrapping="true"
                />

                <VBox
                    id="attributesContainer"
                    items="{attributes>/categories}"
                >
                    <Panel
                        headerText="{attributes>name}"
                        expandable="true"
                        expanded="true"
                    >
                        <VBox items="{attributes>attributes}">
                            <CheckBox text="{attributes>}" wrapping="true" />
                        </VBox>
                    </Panel>
                </VBox>
            </VBox>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button
                    text="{i18n>generateButton}"
                    press=".onGenerate"
                    type="Emphasized"
                />
                <ToolbarSpacer/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
